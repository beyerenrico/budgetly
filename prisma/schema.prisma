generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  email       String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime?
  budgetBooks BudgetBook[]
}

model BudgetBook {
  id          String    @id @default(uuid())
  title       String
  description String
  year        Int
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  user        User      @relation(fields: [userId], references: [id])
  items       Item[]
}

model Category {
  id          String    @id @default(uuid())
  title       String
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  items       Item[]
}

model Item {
  id           String          @id @default(uuid())
  title        String
  description  String
  type         Type            @default(EXPENSE)
  budgetBookId String
  categoryId   String
  createdAt    DateTime        @default(now())
  updatedAt    DateTime?
  budgetBook   BudgetBook      @relation(fields: [budgetBookId], references: [id])
  category     Category        @relation(fields: [categoryId], references: [id])
  months       ItemsInMonths[]
}

model Month {
  id    String          @id @default(uuid())
  slug  String          @unique
  title String
  items ItemsInMonths[]
}

model ItemsInMonths {
  itemId  String
  monthId String
  value   Float
  item    Item   @relation(fields: [itemId], references: [id])
  month   Month  @relation(fields: [monthId], references: [id])

  @@id([itemId, monthId])
}

enum Type {
  INCOME
  EXPENSE
}
